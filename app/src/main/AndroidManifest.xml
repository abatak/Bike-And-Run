<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />


    <application
        android:name=".data.util.BikeAndRunApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/bike_and_run"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/bike_and_run_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BikeAndRun"
        tools:targetApi="31">

        <activity
            android:name=".ui.maps.MapsActivity"
            android:exported="true"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".ui.EditRecordsActivity"
            android:exported="true" />
        <activity
            android:name=".data.firebase.auth.ForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".data.firebase.users.UpdateUserActivity"
            android:exported="true"
            android:parentActivityName=".data.firebase.FirebaseMainActivity" />
        <activity
            android:name=".data.firebase.users.AddUsersActivity"
            android:exported="true"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".data.firebase.FirebaseMainActivity"
            android:exported="true"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".data.firebase.auth.SignInActivity"
            android:exported="true"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".data.firebase.auth.SingUpActivity"
            android:exported="true"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value= "${MAPS_API_KEY}"/>

    </application>

</manifest>