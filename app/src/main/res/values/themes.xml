<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BikeAndRun" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/teal_A200</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnBackground">@color/grey_900</item>
        <item name="android:colorPrimaryDark">@color/teal_400</item>
        <item name="colorOnSecondary">@color/teal_400</item>
        <item name="android:windowOptOutEdgeToEdgeEnforcement" tools:targetApi="35">true</item>
    </style>


    <!-- Floating Action Button customization -->
    <style name="FloatingActionButtonStyle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerRadius">30dp</item>
    </style>
    

    <!-- Calories customization style -->
    <style name="CaloriesToolbarTextAppearance">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="CaloriesDescriptionTextAppearance">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CaloriesDescriptionDistanceAndDurationTextAppearance">
        <item name="android:layout_marginTop">28dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CaloriesDescriptionHillTextAppearance">
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CaloriesWeightAndHillMaterialButtonsAppearance">
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:textColor">@color/teal_700</item>
    </style>

    <style name="CaloriesDistanceAndDurationMaterialButtonsAppearance">
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:textColor">@color/teal_700</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="CaloriesCardViewDurationAppearance">
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="CaloriesDescriptionWeightTextAppearance">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CaloriesImageBackAppearance">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_margin">12dp</item>
    </style>

    <style name="CaloriesRadioButtonsAppearance1">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CaloriesRadioButtonsAppearance2">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CaloriesRadioButtonsAppearance3">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="CaloriesCalculateMaterialButtonAppearance">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/teal_700</item>
        <item name="android:layout_marginTop">30dp</item>
    </style>

    <style name="CaloriesResultTextViewAppearance">
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>


    <!-- Challenge customization style -->
    <style name="ChallengeToolbarTextAppearance">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>



    <style name="ChallengeListTextAppearance">
        <item name="android:layout_marginTop">27dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/blue_500</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ChallengeListTextAppearanceWithGravity">
        <item name="android:layout_marginTop">27dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">end</item>
        <item name="android:textColor">@color/blue_500</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Records customization style -->
    <style name="RecordsToolbarTextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>



    <!-- Firebase customization style -->
    <style name="FirebaseUsersMaterialButtonAppearance">
        <item name="android:layout_margin">20dp</item>
        <item name="android:textColor">@color/teal_900</item>
    </style>

    <style name="FirebaseToolbarTextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FirebaseUsersEditTextAppearance">
        <item name="android:layout_margin">12dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/teal_A200</item>
    </style>

    <style name="FirebaseUsersItemTextAppearance">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
    </style>


    <!-- Bike and running customization style -->
    <style name="CardViewTextAppearance">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:layout_marginStart">42dp</item>
    </style>

    <!-- Account customization style -->
    <style name="AccountTextViewAppearance">
        <item name="android:textColor">@color/teal_A200</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginTop">50dp</item>
    </style>

    <style name="AccountMaterialButtonAppearance">
        <item name="android:textColor">@color/teal_900</item>
        <item name="android:textSize">18sp</item>
        <item name="background">@color/teal_700</item>
    </style>

    <style name="Theme.BikeAndRun" parent="Base.Theme.BikeAndRun" />


</resources>